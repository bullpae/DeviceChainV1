<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <link rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='/app.css'>
  </head>
  <body ng-controller='ApplicationCtrl'>
    <nav class='navbar navbar-default'>
      <div class='container'>
        <ul class='nav navbar-nav'>
          <li><a class='posts' href='/#/'>Posts</a></li>
          <li><a class='register' href='/#/register'>Register</a></li>
          <li><a class='block' href='/#/block'>Block</a></li>
          <li><a class='login' href='/#/login'>Login</a></li>
        </ul>
        <p ng-if='currentUser!=nul' class='navbar-text navbar-right'>
          Signed in as {{currentUser.username}}
          <!--input class="btn btn-success btn-lg btn-block" type="submit" value="Logout"-->
          <button ng-click='usrlogout()' class='btn btn-success'>Logout</button>
        </p>
        <p ng-if='currentUser==nul' class='navbar-text navbar-right'>
          <button ng-click='href=/#/login' class='btn btn-success'>Login</button>
        </p>
      </div>
      </div>
    </nav>
    <div class='container' ng-view></div>
    <script src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.js'></script>
    <script src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-route.js'></script>
    <script src='/app.js'></script>
  </body>
</html>
