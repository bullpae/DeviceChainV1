<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <link rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='/app.css'>
  </head>
  <body ng-controller='ApplicationCtrl'>
    <nav class='navbar navbar-default'>
      <div class='container'>
        <div class="navbar-header">
          <a class="navbar-brand" href="#">DeviceChain</a>
        </div>
        <ul class='nav navbar-nav'>
          <li><a class='posts' href='/#/'>Posts</a></li>
          <li><a class='block' href='/#/block'>Block</a></li>
          <li><a class='login' href='/#/login'>Login</a></li>
          <li><a class='register' href='/#/register'>Register</a></li>
        </ul>
        <div class='nav navbar-right'>
          <!--button ng-click="go('login')" class='btn btn-success'>{{currentUser=nul && 'Login' || 'Logout'}}</button-->
          <p ng-if='currentUser' class='navbar-text'> Signed in as {{currentUser.username}} </p>
          <button ng-click="go('#/login')" class='btn'>Login</button> 
          
        </div>
      </div>

    </nav>
    
    <div class='container' ng-view></div>
    <script src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular.js'></script>
    <script src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.4/angular-route.js'></script>
    <script src='/app.js'></script>
  </body>
</html>
